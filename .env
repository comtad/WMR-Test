# =====================
# BASIC APP SETTINGS
# =====================
APP_NAME=WMR-Test
APP_ENV=local
APP_KEY=base64:JBKMeRYPLFUd7PxwLoM0D+x3bUlG76kXv4TeiSyq7gI=
APP_DEBUG=true
APP_URL=http://localhost:80

# =====================
# LOCALIZATION
# =====================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

# =====================
# SERVER & PERFORMANCE
# =====================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# =====================
# LOGGING
# =====================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =====================
# DATABASE (POSTGRESQL)
# =====================
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# =====================
# SESSION & CACHE
# =====================
SESSION_DRIVER=cookie  # Changed to cookie for simplicity
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
CACHE_STORE=file


# =====================
# FILE SYSTEM & QUEUE
# =====================
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# =====================
# REDIS (PREDIS)
# =====================
REDIS_CLIENT=predis
REDIS_HOST=laravel_redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# =====================
# VITE CONFIGURATION
# =====================
VITE_APP_NAME=test
VITE_APP_URL="http://localhost:5173"  # Explicit Vite URL

# =====================
# DOCKER SETTINGS
# =====================
WWWUSER=1000
WWWGROUP=1000
APP_PORT=80
VITE_PORT=5173
FORWARD_DB_PORT=5432
FORWARD_REDIS_PORT=6379
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal

# =====================
# REVERB (WEBSOCKETS)
# =====================
BROADCAST_DRIVER=reverb
REVERB_APP_ID=wmr-test-app
REVERB_APP_KEY=wmr-test-key
REVERB_APP_SECRET=wmr-test-secret
REVERB_HOST=reverb
REVERB_PORT=8081
REVERB_SCHEME=http
REVERB_SERVER_PORT=8081

# =====================
# VITE-REVERB INTEGRATION
# =====================
VITE_REVERB_APP_KEY=wmr-test-key
VITE_REVERB_HOST=localhost
VITE_REVERB_PORT=8081
VITE_REVERB_SCHEME=http

# =====================
# SANCTUM CONFIG
# =====================
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:80,127.0.0.1:5173,127.0.0.1:80,localhost:8081
SESSION_DOMAIN=null
